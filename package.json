{
  "name": "git-blame-enhanced",
  "displayName": "Git Blame Enhanced",
  "description": "Enhanced git blame with praise mode, emojis, leaderboard, bug detective, and visual statistics",
  "version": "0.0.3",
  "publisher": "haripatel",
  "repository": {
    "type": "git",
    "url": "https://github.com/hardikhari96/git-blame-vsix"
  },
  "license": "MIT",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "gitBlameHistory",
          "name": "Git Blame History",
          "icon": "$(history)",
          "contextualTitle": "Git Blame History"
        }
      ]
    },
    "commands": [
      {
        "command": "git-blame.showFileHistory",
        "title": "Git Blame: Show File History",
        "icon": "$(history)"
      },
      {
        "command": "git-blame.applyPreviousChanges",
        "title": "Git Blame: Apply Previous Changes",
        "icon": "$(discard)"
      },
      {
        "command": "git-blame.refreshHistory",
        "title": "Refresh History",
        "icon": "$(refresh)"
      },
      {
        "command": "git-blame.showDiff",
        "title": "Show Diff",
        "icon": "$(diff)"
      },
      {
        "command": "git-blame.toggleBlameAnnotations",
        "title": "Git Blame: Toggle Inline Annotations",
        "icon": "$(eye)"
      },
      {
        "command": "git-blame.togglePraiseMode",
        "title": "Git Blame: Toggle Praise/Blame Mode",
        "icon": "$(smiley)"
      },
      {
        "command": "git-blame.showLeaderboard",
        "title": "Git Blame: Show Leaderboard",
        "icon": "$(trophy)"
      },
      {
        "command": "git-blame.toggleEmojis",
        "title": "Git Blame: Toggle Emojis",
        "icon": "$(symbol-color)"
      },
      {
        "command": "git-blame.toggleBugDetective",
        "title": "Git Blame: Toggle Bug Detective Mode",
        "icon": "$(bug)"
      },
      {
        "command": "git-blame.showStatistics",
        "title": "Git Blame: Show Statistics",
        "icon": "$(graph)"
      },
      {
        "command": "git-blame.blameRoulette",
        "title": "Git Blame: Blame Roulette üé≤",
        "icon": "$(symbol-event)"
      },
      {
        "command": "git-blame.showAchievements",
        "title": "Git Blame: Show Achievements üèÜ",
        "icon": "$(star-full)"
      },
      {
        "command": "git-blame.togglePartyMode",
        "title": "Git Blame: Toggle Party Mode üéâ",
        "icon": "$(flame)"
      },
      {
        "command": "git-blame.showFunFact",
        "title": "Git Blame: Show Fun Fact üí°",
        "icon": "$(lightbulb)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "git-blame.refreshHistory",
          "when": "view == gitBlameHistory",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "git-blame.showDiff",
          "when": "view == gitBlameHistory && viewItem == historyItem",
          "group": "inline"
        }
      ],
      "editor/context": [
        {
          "command": "git-blame.showFileHistory",
          "group": "git-blame@1",
          "when": "editorTextFocus"
        },
        {
          "command": "git-blame.applyPreviousChanges",
          "group": "git-blame@2",
          "when": "editorTextFocus"
        },
        {
          "command": "git-blame.toggleBlameAnnotations",
          "group": "git-blame@3",
          "when": "editorTextFocus"
        },
        {
          "command": "git-blame.togglePraiseMode",
          "group": "git-blame@4",
          "when": "editorTextFocus"
        },
        {
          "command": "git-blame.showLeaderboard",
          "group": "git-blame@5",
          "when": "editorTextFocus"
        },
        {
          "command": "git-blame.toggleBugDetective",
          "group": "git-blame@6",
          "when": "editorTextFocus"
        },
        {
          "command": "git-blame.showStatistics",
          "group": "git-blame@7",
          "when": "editorTextFocus"
        },
        {
          "command": "git-blame.blameRoulette",
          "group": "git-blame-fun@1",
          "when": "editorTextFocus"
        },
        {
          "command": "git-blame.showAchievements",
          "group": "git-blame-fun@2",
          "when": "editorTextFocus"
        }
      ],
      "commandPalette": [
        {
          "command": "git-blame.showDiff",
          "when": "false"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.107.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.48.1",
    "eslint": "^9.39.1",
    "esbuild": "^0.27.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
